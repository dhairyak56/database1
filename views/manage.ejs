<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Events</title>
    <link rel="stylesheet" href="/css/manage.css">
</head>
<body>
    <header>
        <div class="navbar">
            <div class="logo">CauseConnect</div>
            <ul class="nav-links">
                <li><a href="/">Home</a></li>
                <li><a href="/about">About</a></li>
                <li><a href="/events">Events</a></li>
                <li><a href="/faqs">FAQs</a></li>
                <% if (user) { %>
                    <li><a href="/profile">Profile</a></li>
                    <li><a href="/logout">Logout</a></li>
                <% } else { %>
                    <li><a href="/login">Login</a></li>
                    <li><a href="/signup" class="sign-up">Sign Up</a></li>
                <% } %>
            </ul>
        </div>
    </header>
    <main class="manage-container">
        <h1>Manage Events</h1>
        <% if (messages.error && messages.error.length > 0) { %>
            <div class="error-message"><%= messages.error %></div>
        <% } %>
        <% if (messages.success && messages.success.length > 0) { %>
            <div class="success-message"><%= messages.success %></div>
        <% } %>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Organization</th>
                    <th>Location</th>
                    <th>Time</th>
                    <th>Description</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% events.forEach(event => { %>
                    <tr>
                        <td><%= event.id %></td>
                        <td><%= event.name %></td>
                        <td><%= event.organization %></td>
                        <td><%= event.location %></td>
                        <td><%= event.time %></td>
                        <td><%= event.description %></td>
                        <td><%= event.date %></td>
                        <td class="action-buttons">
                            <a href="/events/edit/<%= event.id %>">Edit</a>
                            <form action="/events/delete/<%= event.id %>" method="POST" style="display:inline;">
                                <button type="submit" class="delete-button">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </main>
    <footer>
        <div class="footer-content">
            <div class="footer-info">
                <p>&copy; 2023 CauseConnect. All rights reserved.</p>
            </div>
        </div>
    </footer>
</body>
</html>
